# Port Configuration
PORT=8000

# Database Configuration
# Default: SQLite
DATABASE_URL=sqlite:////data/classly.db

# Appwrite Configuration (Optional - for data storage)
# Set APPWRITE=true to enable Appwrite backend instead of SQLite
# APPWRITE=true
# APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
# APPWRITE_PROJECT_ID=your_project_id
# APPWRITE_API_KEY=your_api_key
# APPWRITE_DATABASE_ID=classly_db

# Auto-Migration (Optional)
# Set to 'appwrite' to automatically migrate data from SQLite to Appwrite on startup
# AUTOMIGRATE_TO=appwrite

# Domain Migration (optional)
# Set these if you are moving domains and want to keep users logged in
# MIGRATE_FROM_DOMAIN=old-domain.com
# MIGRATE_TO_DOMAIN=new-domain.com

# Security (optional but recommended)
# SECRET_KEY=changeme
# TZ=Europe/Berlin

# Legal & Contact (Impressum/Datenschutz)
IMPRESSUM_NAME="Dein Name"
IMPRESSUM_STREET="Musterstra√üe 1"
IMPRESSUM_PLZ_ORT="12345 Musterstadt"
CONTACT_EMAIL="info@example.com"

# Self-Hosting Limits
# MAX_CLASSES=5 (Set to limit the total number of classes on this instance)

# System Administration (Requires Secret)
# Access at /system/login
CLASSLY_ADMIN_SECRET=change_this_to_a_secure_random_string

# Admin Dashboard Defaults
CLASSLY_DB_PRIMARY=sqlite
CLASSLY_BACKUP_TARGET=local

# Backup Targets (Optional)
# S3 Configuration (for Backups)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_BUCKET=classly-backups

# Supabase Configuration (Optional - Alternative to Appwrite/SQLite)
# SUPABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# Analytics (optional)
# GTM_ID=GTM-XXXXXXX
